@model Presence.Models.Employe

@{
    ViewData["Title"] = "Delete Employe";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white text-center">
                    <h3>Delete Employe</h3>
                </div>
                <div class="card-body">
                    <h5 class="text-center text-danger">⚠️ Are you sure you want to delete this employe record?</h5>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">First Name:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FirstName)</dd>

                        <dt class="col-sm-4 fw-bold">Last Name:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.LastName)</dd>

                        <dt class="col-sm-4 fw-bold">Sex:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Sexe)</dd>

                        <dt class="col-sm-4 fw-bold">Birth Date:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.BirthDate)</dd>

                        <dt class="col-sm-4 fw-bold">Hire Date:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.HireDate)</dd>

                        <dt class="col-sm-4 fw-bold">Email:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-4 fw-bold">Address:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>

                        <dt class="col-sm-4 fw-bold">City:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.City)</dd>

                        <dt class="col-sm-4 fw-bold">Region:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Region)</dd>

                        <dt class="col-sm-4 fw-bold">Country:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Country)</dd>

                        <dt class="col-sm-4 fw-bold">Phone:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Phone)</dd>

                        <dt class="col-sm-4 fw-bold">Extension:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Extension)</dd>

                        <dt class="col-sm-4 fw-bold">Photo:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Photo)</dd>

                        <dt class="col-sm-4 fw-bold">Employee Notes:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.EmployeeNotes)</dd>

                        <dt class="col-sm-4 fw-bold">Barcode:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Barcode)</dd>

                        <dt class="col-sm-4 fw-bold">Postal Code:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Postal.Code_Postal)</dd>

                        <dt class="col-sm-4 fw-bold">Department:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Departement.NomDepartement)</dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete Employe
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
