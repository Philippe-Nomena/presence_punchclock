@model Presence.Models.Postal

@{
    ViewData["Title"] = "Postal Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-info text-white text-center">
                    <h3>Postal Details</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">Postal Code:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Code_Postal)</dd>

                        <dt class="col-sm-4 fw-bold">Country:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Pays)</dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-info text-white">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
