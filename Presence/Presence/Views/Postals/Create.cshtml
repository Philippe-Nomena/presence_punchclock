@model Presence.Models.Postal

@{
    ViewData["Title"] = "Create Postal Code";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white text-center">
                    <h3>Create New Postal Code</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>

                        <!-- Code Postal Field -->
                        <div class="mb-3">
                            <label asp-for="Code_Postal" class="form-label fw-bold"></label>
                            <input asp-for="Code_Postal" class="form-control" placeholder="Enter postal code" />
                            <span asp-validation-for="Code_Postal" class="text-danger"></span>
                        </div>

                        <!-- Pays Field -->
                        <div class="mb-3">
                            <label asp-for="Pays" class="form-label fw-bold"></label>
                            <input asp-for="Pays" class="form-control" placeholder="Enter country" />
                            <span asp-validation-for="Pays" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Create Postal Code
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
