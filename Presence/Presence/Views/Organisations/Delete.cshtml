@model Presence.Models.Organisation

@{
    ViewData["Title"] = "Delete Organisation";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white text-center">
                    <h3>Confirm Deletion</h3>
                </div>
                <div class="card-body">
                    <h5 class="text-center">Are you sure you want to delete this organisation?</h5>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">Organisation Name:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nom_Organisation)</dd>
                    </dl>

                    <form asp-action="Delete" onsubmit="return confirm('Are you sure you want to delete this record? This action cannot be undone.');">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
