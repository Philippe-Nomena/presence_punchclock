@model Presence.Models.Departement

@{
    ViewData["Title"] = "Edit Department";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Edit Department</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>

                        <!-- Hidden Id Field -->
                        <input type="hidden" asp-for="Id" />

                        <!-- Organisation Dropdown -->
                        <div class="mb-3">
                            <label asp-for="IdOrganisation" class="form-label fw-bold">Organisation</label>
                            <select asp-for="IdOrganisation" class="form-control" asp-items="ViewBag.IdOrganisation">
                                <option value="">-- Select an Organisation --</option>
                            </select>
                            <span asp-validation-for="IdOrganisation" class="text-danger"></span>
                        </div>

                        <!-- Department Name Input -->
                        <div class="mb-3">
                            <label asp-for="NomDepartement" class="form-label fw-bold">Department Name</label>
                            <input asp-for="NomDepartement" class="form-control" placeholder="Enter department name" />
                            <span asp-validation-for="NomDepartement" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
