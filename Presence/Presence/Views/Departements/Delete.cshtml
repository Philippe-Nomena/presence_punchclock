@model Presence.Models.Departement

@{
    ViewData["Title"] = "Delete Departement";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white text-center">
                    <h3>Delete Departement</h3>
                </div>
                <div class="card-body">
                    <h5 class="text-center text-danger">⚠️ Are you sure you want to delete this departement?</h5>
                    <hr />
                    <dl class="row">
                        <!-- Departement Name -->
                        <dt class="col-sm-4 fw-bold">Departement Name:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NomDepartement)</dd>

                        <!-- Organisation Name -->
                        <dt class="col-sm-4 fw-bold">Organisation:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Organisation.Nom_Organisation)</dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <!-- Back to List Button -->
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <!-- Delete Button -->
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete Departement
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
